name "coregraphics-d"
description "D bindings for the Core Graphics API"
authors "Inochi2D Project"
copyright "Copyright Â© 2024, Inochi2D Project"
license "BSD-2-Clause"

dependency "objective-d" version=">=1.1.0"

targetPath "out/"

# Default configuration.
configuration "static" {
    platforms "osx" "ios" "tvos" "watchos" "visionos"
    targetType "sourceLibrary"
    
    lflags "-framework" "CoreGraphics" "-framework" "OpenGL" "-framework" "IOSurface"
}

# For platforms that don't support it.
configuration "other_platforms" {
    targetType "none"
}
